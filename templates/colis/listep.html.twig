{% block body %}
    <h1>Listes des colis</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Depatrtuire</th>
                <th>Destination</th>
                <th>Quantity</th>
                <th>Prix</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Date</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for colis in coli %}
            <tr>
                <td>{{colis.id}}</td>
                <td>{{colis.name}}</td>
                <td>{{colis.departure}}</td>
                <td>{{colis.destination}}</td>
                <td>{{colis.quantity }}</td>
                <td>{{colis.prix}}</td>
                <td>{{colis.phone }}</td>
                <td>{{colis.email }}</td>
                <td>{{colis.date ? colis.date|date('Y-m-d') : '' }}</td>
                <td><img src ="{{ asset('uploads/images/' ~ colis.image) }}"
                         alt =""  width="100" height="100"></td>
             </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('colis_new') }}">Create</a>
{% endblock %}
